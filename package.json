{
  "name": "@cndavid/reusable-components",
  "version": "1.0.0",
  "description": "This package implements react components based on MUI",
  "type": "module",
  "main": "lib/cjs/index.js",
  "exports": {
    "import": {
      "default": "./lib/esm/index.js",
      "types": "./lib/types/index.d.ts"
    },
    "require": {
      "default": "./lib/cjs/index.js",
      "types": "./lib/types/index.d.ts"
    }
  },
  "files": [
    "lib"
  ],
  "sideEffects": false,
  "scripts": {
    "build": "rimraf ./lib && tsc --skipLibCheck --project tsconfig.cjs.json && tsc --skipLibCheck --project tsconfig.esm.json",
    "release-package": "npm run build && npx changeset publish"
  },
  "author": "cndavid",
  "license": "MIT",
  "dependencies": {
    "@emotion/react": "11.11.3",
    "@emotion/styled": "11.11.0",
    "@mui/material": "5.15.0"
  },
  "peerDependencies": {
    "react": "18.2.0",
    "react-dom": "18.2.0"
  },
  "devDependencies": {
    "@changesets/cli": "^2.27.1",
    "rimraf": "^6.1.0",
    "typescript": "^5.4.2"
  }
}
